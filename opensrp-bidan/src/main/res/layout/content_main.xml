    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_discovery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_discorvery_startstop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Search/Stop Device" />

        <!--<Button-->
        <!--android:id="@+id/btn_discorvery"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Search Device" />-->
        <!---->
        <!--<Button-->
        <!--android:id="@+id/btn_stopdiscorvery"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Stop Searching" />-->

        <Button
            android:id="@+id/btn_Certification"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Certification" />

        <TextView
            android:id="@+id/tv_devScan"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Device Scan"
            android:textSize="20sp" />

        <Button
            android:id="@+id/enable_bt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/round_button"
            android:text="@string/str_enable_bt"
            android:textColor="#FFF"
            android:textSize="40dp" />

        <ListView
            android:id="@+id/list_scan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_devConnect"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Device Connected"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/list_connected"
            android:layout_width="fill_parent"
            android:layout_height="600dp" />


