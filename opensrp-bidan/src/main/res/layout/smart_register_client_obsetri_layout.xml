<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/list_gplsa_view_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="4dp"
    android:layout_weight="110"
    android:background="@color/light_pink"
    android:paddingBottom="3dp"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp">

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/label_gravida"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/obsetri_item_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/str_gravida_full" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/label_parity"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/obsetri_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_gravida"
        android:text="@string/str_parity_full" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/label_number_of_abortus"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/obsetri_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_parity"
        android:text="@string/str_abortus_full" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/label_number_of_alive"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/obsetri_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_number_of_abortus"
        android:text="@string/str_alive_full" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/tv_gravida"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/gplsa_item_width"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/label_gravida" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/tv_parity"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/gplsa_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gravida"
        android:layout_toRightOf="@id/label_parity" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/tv_number_of_abortus"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/gplsa_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_parity"
        android:layout_toRightOf="@id/label_number_of_abortus" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/tv_number_of_alive"
        style="@style/CustomFontTextViewStyle.ListView.Normal.Obsetri"
        android:layout_width="@dimen/gplsa_item_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_number_of_abortus"
        android:layout_toRightOf="@id/label_number_of_alive" />

</RelativeLayout>
    