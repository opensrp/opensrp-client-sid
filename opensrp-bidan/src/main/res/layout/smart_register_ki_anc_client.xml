<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:weightSum="@integer/ec_list_item_weight_count">

    <include layout="@layout/smart_register_client_profile_ki" />

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:contentDescription=""
        android:src="@color/smart_register_client_divider_color" />

    <RelativeLayout
        android:id="@+id/id_detail_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="90"
        android:orientation="horizontal"
        android:weightSum="1">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/label_no_ibu"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="@string/header_no_ibu" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/no_ibu"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_no_ibu"
            android:paddingLeft="5dp" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/label_unique_id"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_ibu"
            android:paddingLeft="5dp"
            android:text="Unique Id: " />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/unique_id"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_unique_id"
            android:layout_weight="@integer/ec_list_ec_no_view_weight"
            android:paddingLeft="5dp"
            android:text="3123142"
            android:textSize="@dimen/anc_list_hb_ifa_service_mode_hb_details_indicator_view_height" />

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="150"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_usia_klinis"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Minggu" />


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/lbl_htpt"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edd_label" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_htpt"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14/08/2014" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_edd_due"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14/08/2014"
                android:textColor="@color/alert_urgent_red" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="120"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/status_bar_text_almost_white"
            android:orientation="vertical">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/lbl_ki_lila_bb"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lila" />


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_ki_lila_bb"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/lbl_ki_beratbadan_tb"
                style="@style/CustomFontTextViewStyle.ListView.VerySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mother_weight" />


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_ki_beratbadan_tb"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="170"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/status_bar_text_almost_white"
            android:orientation="vertical">


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_tanggal_kunjungan_anc"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:text=" "
                android:textSize="14sp" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_anc_number"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:text=" "
                android:textSize="14sp" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/txt_kunjugan_ke"
                style="@style/CustomFontTextViewStyle.ListView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:text=" "
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <RelativeLayout
        android:id="@+id/anc_status_layout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:layout_weight="135">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/txt_status_type"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="ANC" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/label_status_date"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txt_status_type"
            android:text="Start:" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/txt_status_date_anc"
            style="@style/CustomFontTextViewStyle.ListView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_status_type"
            android:layout_toRightOf="@id/label_status_date" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/txt_alert_status"
            style="@style/CustomFontTextViewStyle.ListView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_status_date" />

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color" />

    <ImageButton
        android:id="@+id/btn_anc_edit"
        android:layout_width="@dimen/list_edit_icon_view_width"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:layout_weight="95"
        android:background="@drawable/edit_button_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_pencil" />


</LinearLayout>