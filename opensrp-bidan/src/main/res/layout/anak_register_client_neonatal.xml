<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:layout_weight="16"
    android:background="@color/status_bar_text_almost_white">

    <ImageView
        android:id="@+id/icon_immuni_hb_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon_immuni_hb_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_no_small" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/is_immuni_hb"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text=" HB 0" />

    <ImageView
        android:id="@+id/icon_vit_k_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_immuni_hb"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon_vit_k_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_immuni_hb"
        android:src="@drawable/ic_no_small" />


    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/is_vit_k"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_immuni_hb"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text=" Vit K" />

    <ImageView
        android:id="@+id/icon_pol1_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_vit_k"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon_pol1_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_vit_k"
        android:src="@drawable/ic_no_small" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/is_pol1"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_vit_k"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text=" BCG dan Polio 1" />

    <ImageView
        android:id="@+id/icon_pol2_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_pol1"
        android:src="@drawable/ic_yes_small"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon_pol2_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/is_pol1"
        android:src="@drawable/ic_no_small" />


    <org.smartregister.view.customcontrols.CustomFontTextView
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_pol1"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text=" DPT/HB1/Polio 2" />


</RelativeLayout>