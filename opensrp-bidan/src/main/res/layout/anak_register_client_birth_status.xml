<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/list_status_view_width"
    android:layout_height="fill_parent"
    android:layout_margin="2dp"
    android:layout_weight="18"
    android:background="@color/status_bar_text_almost_white">

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_visit_date"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_current_weight"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_visit_date"
        android:text="" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_current_height"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_current_weight" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/txt_status_gizi"
        style="@style/CustomFontTextViewStyle.ListView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_current_height" />
</RelativeLayout>