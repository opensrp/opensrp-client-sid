<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="170dp"
        android:layout_height="fill_parent"
        android:id="@+id/profile_info_layout"
        android:layout_weight="3">

        <ImageView
            android:layout_width="@dimen/client_profile_pic_width"
            android:layout_height="80dp"
            android:id="@+id/profilepic"
            android:src="@mipmap/child_boy"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:id="@+id/txt_child_name"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:id="@+id/txt_child_age"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="10sp" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:id="@+id/ParentName"
                android:textColor="@color/light_blue"
                android:textSize="14sp" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:id="@+id/txt_child_subVillage"
                android:textSize="12sp" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CustomFontTextViewStyle.ListView.Medium"
                android:text="Medium Text"
                android:id="@+id/txt_child_gender"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_nav_bar_separator"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:src="@color/smart_register_client_divider_color" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="5">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.6"
            android:id="@+id/hb0Layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/hb1"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hbLogo"
                android:layout_gravity="center"
                android:background="@drawable/abc_list_divider_mtrl_alpha" />

        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/smart_register_nav_bar_separator"
            android:layout_height="fill_parent"
            android:id="@+id/imageView3"
            android:src="@color/smart_register_client_divider_color" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.6"
            android:id="@+id/bcgLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/pol1"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pol1Logo"
                android:layout_gravity="center"
                android:background="@drawable/abc_list_divider_mtrl_alpha" />

        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/smart_register_nav_bar_separator"
            android:layout_height="fill_parent"
            android:id="@+id/imageView4"
            android:src="@color/smart_register_client_divider_color" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.6"
            android:id="@+id/hb1Layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/pol2"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pol2Logo"
                android:layout_gravity="center"
                android:background="@drawable/abc_list_divider_mtrl_alpha" />

        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/smart_register_nav_bar_separator"
            android:layout_height="fill_parent"
            android:id="@+id/imageView5"
            android:src="@color/smart_register_client_divider_color" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.6"
            android:id="@+id/hb2Layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/pol3"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pol3Logo"
                android:layout_gravity="center"
                android:background="@drawable/abc_list_divider_mtrl_alpha" />

        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/smart_register_nav_bar_separator"
            android:layout_height="fill_parent"
            android:id="@+id/imageView6"
            android:src="@color/smart_register_client_divider_color" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.6"
            android:id="@+id/hb3Layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/pol4"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pol4Logo"
                android:layout_gravity="center"
                android:background="@drawable/abc_list_divider_mtrl_alpha" />

        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/smart_register_nav_bar_separator"
            android:layout_height="fill_parent"
            android:id="@+id/imageView7"
            android:src="@color/smart_register_client_divider_color" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.6"
            android:id="@+id/campakLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/ipv"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/measlesLogo"
                android:layout_gravity="center"
                android:background="@drawable/abc_list_divider_mtrl_alpha" />

        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/smart_register_nav_bar_separator"
            android:layout_height="fill_parent"
            android:id="@+id/imageView8"
            android:src="@color/smart_register_client_divider_color" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:layout_weight="120"
            android:scaleType="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/edit_button_background"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>



    <ImageView
        android:layout_width="@dimen/smart_register_client_divider_height"
        android:layout_height="fill_parent"
        android:src="@color/smart_register_client_divider_color"/>

</LinearLayout>